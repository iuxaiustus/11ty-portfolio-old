<!doctype html>
<html class="h-100" lang="{{ metadata.language }}">

  <head>
    {% include 'snippets/head.njk' %}
  </head>
  <body>

    {% include 'snippets/navbar.njk' %}

    <main class="container py-vh-5">
      <div class="row d-flex">
        <article>
          {% myResponsiveImage "" + cover,
          "ss" %}</div>
        {% include 'snippets/work_header.njk' %}

        <div class="col-12">

          <p class="lead">

            <p class="text-center fs-1 pb-5">{{section1_title}}</p>
            <div class=" py-vh-5 text-center" style="height:23vh; background-image: url('/img/bg_cover.png');background-size: cover;">
              <h4 class="">{{section1_subtitle}}</h4>
              <p class="fs-5">{{ section1_content }}</p>
            </div>
          </p>
          <div class="row justify-content-center">
            <div class="col-12 col-md-8 py-5">
              <h4>{{section2_title}}</h4>
              <p class="fs-5">{{ section2_content }}</p>
              <div class="px-5 py-5">
                {% myBlogImage "" + section2_img,
                "ss" %}
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-12 col-md-8 py-5">
              <h4>{{section3_title}}</h4>
              <p class="fs-5">{{ section3_content }}</p>
              <div class="py-5 px-5">
                {% myBlogImage "" + section3_img,
                "ss" %}
              </div>
            </div>
          </div>

          <div class="row justify-content-center text-center">
            <div class="col-12 col-md-8 py-5">
              <p class="fs-1">{{section4_title}}</p>
              <p class="fs-5">{{ section4_content }}</p>
              <div class="py-5 px-5">
                {% myBlogImage "" + section4_img,
                "ss" %}
              </div>
            </div>
          </div>

          <div class="row justify-content-center">
            <div class="col-12 col-md-8 py-5">
              <h4>{{section5_title}}</h4>
              <p class="fs-5">{{ section5_content }}</p>
              <div class="py-5 px-5">
                {% myBlogImage "" + section5_img,
                "ss" %}
              </div>
            </div>

            <p class="text-center fs-1">{{section6_title}}</p>
            <div class="row text-center justify-content-center col-12 col-md-8 py-3">
              <div class="col-12">
                <p class="fs-0 fw-light pb-0 mb-0 lh-1">90%</p>
                <p> visibility improvement over previous methods</p>
              </div>
            </div>

          </div>
          {{ content | safe }}
        </div>
      </article>

    </div>

  </div>
</main>

<footer class="container">
  {% include 'snippets/footer.njk' %}
</footer>

</body>

</html>